<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.bfpme.controllers.ChatBot" spacing="10.0" alignment="CENTER" prefHeight="400.0" prefWidth="300.0">
    <!-- Chat Display Area -->
    <TextArea fx:id="conversationArea" prefHeight="350.0" prefWidth="280.0" editable="false" wrapText="true"/>

    <!-- User Input Field -->
    <TextField fx:id="inputField" prefWidth="200.0" onAction="#handleUserInput" promptText="Type a message..."/>

    <!-- Send Button -->
    <Button text="Send" onAction="#handleUserInput"/>
</VBox>
