<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.bfpme.controllers.CameraFeedController">
    <children>
        <ImageView fx:id="cameraView" fitWidth="640.0" fitHeight="480.0" layoutX="20.0" layoutY="20.0" />
        <Label fx:id="instructionLabel" layoutX="20.0" layoutY="520.0" prefHeight="30.0" prefWidth="640.0" text="Instructions will appear here" />

        <Button fx:id="continueButton" layoutX="540.0" layoutY="560.0" text="Continue" onAction="#handleContinue" />
        <Button fx:id="retryButton" layoutX="420.0" layoutY="560.0" text="Retry" onAction="#handleRetry" />
    </children>
</AnchorPane>
